<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">


        <ImageView
            android:layout_width="150dp"
            android:layout_centerHorizontal="true"
            android:layout_height="180dp"
            android:id="@+id/gambarBarang"/>

        <TextView
            android:id="@+id/namaBarangTampil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gambarBarang"
            android:layout_centerHorizontal="true"
            android:text="Nama" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hargaBarangTampil"
            android:layout_below="@+id/namaBarangTampil"
            android:layout_centerHorizontal="true"
            android:text="Harga"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hargaBarangTampil"
            android:id="@+id/stokBarangTampil"
            android:layout_centerHorizontal="true"
            android:text="Stok"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>